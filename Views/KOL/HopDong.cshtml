@model IEnumerable<QuanLiKOL.Models.hopdong>

@{
    ViewBag.Title = "HopDong";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>HopDong</h2>
<table class="table">
    <tr style="background-color:gray">
        <th>
            Contract Id
        </th>
        <th>
            Contract name
        </th>
        <th>
            Fields
        </th>
        <th>
            Value
        </th>
        <th>
            Start Day
        </th>
        <th>
            End Date
        </th>

        <th>
            Status
        </th>

        <th>
            Option: Detail
        </th>
        
    </tr>

    @foreach (var item in Model)
    {
        int trangthai = (int)item.trangthai;
        if (trangthai == 1)
        {
            <tr style="background-color:aqua">
                <td>
                    @Html.DisplayFor(modelItem => item.mahd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tenhd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.linhvuc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.trigia)
                </td>
                <td>
                    @{
                        string ngaybd = item.ngaybatdau.Value.Day + "/" + item.ngaybatdau.Value.Month + "/" + item.ngaybatdau.Value.Year;
                    }
                    @ngaybd
                </td>
                <td>
                    @{
                        string ngaykt = item.ngayketthuc.Value.Day + "/" + item.ngayketthuc.Value.Month + "/" + item.ngayketthuc.Value.Year;
                    }
                    @ngaykt
                </td>

                <td>
                    Wait for KOL to confirm
                </td>

                <td>
                    <strong><a style="color:black" href="#####">Show Detail</a></strong>
                </td>
                
            </tr>
        }
        if (trangthai == 2)
        {
            <tr style="background-color:darkorchid">
                <td>
                    @Html.DisplayFor(modelItem => item.mahd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tenhd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.linhvuc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.trigia)
                </td>
                <td>
                    @{
                        string ngaybd = item.ngaybatdau.Value.Day + "/" + item.ngaybatdau.Value.Month + "/" + item.ngaybatdau.Value.Year;
                    }
                    @ngaybd
                </td>
                <td>
                    @{
                        string ngaykt = item.ngayketthuc.Value.Day + "/" + item.ngayketthuc.Value.Month + "/" + item.ngayketthuc.Value.Year;
                    }
                    @ngaykt
                </td>

                <td>
                    Waiting For Approval
                </td>

                <td>
                    <strong><a style="color:black" href="#####">Show Detail</a></strong>
                </td>
                
            </tr>
        }
        if (trangthai == 3)
        {
            <tr style="background-color:lightgoldenrodyellow">
                <td>
                    @Html.DisplayFor(modelItem => item.mahd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tenhd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.linhvuc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.trigia)
                </td>
                <td>
                    @{
                        string ngaybd = item.ngaybatdau.Value.Day + "/" + item.ngaybatdau.Value.Month + "/" + item.ngaybatdau.Value.Year;
                    }
                    @ngaybd
                </td>
                <td>
                    @{
                        string ngaykt = item.ngayketthuc.Value.Day + "/" + item.ngayketthuc.Value.Month + "/" + item.ngayketthuc.Value.Year;
                    }
                    @ngaykt
                </td>

                <td>
                    Wait for pay
