@model IEnumerable<QuanLiKOL.Models.hopdong>

@{
    ViewBag.Title = "LoadHDChoDuyet";
    Layout = "~/Views/Shared/_ADMIN.cshtml";
}
<link href="~/Content/css/TableStyleSheet.css" rel="stylesheet" />
<div style="padding:20px">
    <form action="LoadHDL" method="post">
        <h2>Search</h2>
        <input name="search" type="search" placeholder="Enter the contract id" />
        <input type="submit" value="Search" />
    </form>
    <h2>LIST OF CONTRACT PENDING APPROVAL</h2>
    <hr />
    <table class="table">
        <tr style="background-color:gray">
            <th>
                Contract Id
            </th>
            <th>
                Contract name
            </th>
            <th>
                Fields
            </th>
            <th>
                Value
            </th>
            <th>
                Start Day
            </th>
            <th>
