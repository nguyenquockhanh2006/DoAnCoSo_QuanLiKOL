@model IEnumerable<QuanLiKOL.Models.hopdong>

@{
    if (Session["PQ"].ToString() == "KOL")
    {
        Layout = "~/Views/Shared/_KOLLayoutPage.cshtml";
    }

    if (Session["PQ"].ToString() == "KHACH")
    {
        Layout = "~/Views/Shared/_KHACHHANG.cshtml";
    }
    if (Session["PQ"].ToString() == "ADMIN")
    {
        Layout = "~/Views/Shared/_ADMIN.cshtml";
    }

}


<meta name="viewport" content="width=device-width" />
<link href="~/Content/css/TableStyleSheet.css" rel="stylesheet" />
<title>loadhdtheodk</title>

<table class="table">
    <tr>
        <th>
            Mã hợp đồng
        </th>
        <th>
            Tên hợp đồng
        </th>
        <th>
            Bên A(KOL)
        </th>
        <th>
            Bên B(Khách)
        </th>
        <th>
            Bên C (Admin)
        </th>
        <th>
            Trị giá
        </th>
        <th>
            Option
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.mahd
            </td>
            <td>
                @item.tenhd
            </td>
            <td>
                <a href="~/KOL/TrangCaNhan?id=@item.KOL.id">@item.bena</a>
            </td>
            <td>
                @item.benb
            </td>
            <td>
                @item.benc
            </td>
            <td>
                @item.trigia
            </td>
            <td>
                <a href="~/KhachHang/CTHopDong?id=@item.mahd">Xem chi tiết</a>
                @if (item.trangthai == 1)
                {
                    <div>/</div>
                    <a href="~/KhachHang/XoaHD/@item.mahd">Xóa</a>
                }
            </td>
        </tr>
    }

</table>

